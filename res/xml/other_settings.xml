<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/other_setting">

    <PreferenceCategory
        android:title="@string/monet">

          <com.radiant.support.preferences.SystemSettingSwitchPreference
               android:key="monet_custom_themes" 
               android:title="@string/custom_colors"
               android:summary="@string/custom_colors_summary"
               android:defaultValue="false"
               android:icon="@drawable/ic_colors"/>

          <com.radiant.support.preferences.SystemSettingSwitchPreference
               android:key="monet_plain_theme" 
               android:title="@string/plain_colors"
               android:summary="@string/plain_colors_summary"
               android:dependency="monet_custom_themes"
               android:defaultValue="false"
               android:icon="@drawable/ic_dark"/>

          <Preference
               android:key="monet_wall" 
               android:title="@string/monet_wall"
               android:summary="@string/monet_wall_summary"
               android:dependency="monet_custom_themes"
               android:icon="@drawable/ic_settings_wallpaper_white"
               settings:controller="com.radiant.settings.controller.RadiantColorPreferenceController"/>

     </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/lockscreen">

          <com.radiant.support.preferences.SystemSettingSwitchPreference
               android:key="ls_smol_clock" 
               android:title="@string/small_clock"
               android:summary="@string/small_clock_summary"
               android:defaultValue="false"
               android:icon="@drawable/ic_clock"/>

     </PreferenceCategory>

</PreferenceScreen>
